<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td id="favorite-btn-<%= @book.id %>">
            <%= render 'favorites/favorite-btn', book: @book %>
          </td>
          <td>
            コメント数: <%= @book.book_comments.count %>
          </td>

          <!--レビュー-->
          <td>
            <div id="post_raty_<%=@book.id%>"></div>
            <script>
              // scriptファイルをどのidの部分に配置するかを指定
              elem = document.querySelector('#post_raty_<%=@book.id%>');
              opt = {
                //星画像の指定などのオプションをここに記述,
                readOnly: true,
                starOff: '<%= asset_path('star-off.png') %>',
                starOn: '<%= asset_path('star-on.png') %>',
                score: '<%=@book.star%>',
                half: false,
               };
              raty(elem,opt);
            </script>
          </td>

          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>
            閲覧数: <%= @book.view_counts.count %>
          </td>
        </tr>
      </table>
      <%= render 'comment', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>