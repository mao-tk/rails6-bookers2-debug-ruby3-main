
<div>

  <% book.book_comments.each do |book_comment| %>
  <table>
    <tr>
      <td>
        <%= link_to(book.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.comments %>
      </td>
      <% if book_comment.user_id == current_user.id %>
        <td><%= link_to 'Destroy', book_book_comment_path(book_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
      <% end %>
    </tr>
  </table>
  <% end %>
</div>

<div>

  <%= form_with model: [book, book_comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :comments, class: "form-control" %>
    </div>
    <%= f.submit "送信" %>
  <% end %>

</div>