<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <!--一覧表示-->
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <!--投稿数・前日比-->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
              <%= @today_count.count %>
            </td>
            <td>
              <%= @yesterday_count.count %>
            </td>
            <% if @yesterday_count.count == 0 %>
              <td>
                -
              </td>
            <% else %>
              <td>
                <%= ((@today_count.count / @today_count.count.to_f)*100).round %>%
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <!--投稿数・前週比-->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
              <%= @this_week_count.count %>
            </td>
            <td>
              <%= @last_week_count.count %>
            </td>
            <% if @last_week_count.count == 0 %>
              <td>
                -
              </td>
            <% else %>
              <td>
                <%= ((@this_week_count.count / @last_week_count.count)*100).round %>%
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
