<div class="container">
  <div class="row">
    <div class="mx-auto">
      <% if user_signed_in? %>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.hidden_field :model, :value => "tag"  %>
          <%= f.hidden_field :method, :value => "perfect" %>
          <%= f.submit 'タグ検索', class: "btn btn-sm btn-info" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>